{
  "name": "discord-mcp",
  "version": "2.0.0",
  "description": "Model Context Protocol (MCP) server for Discord API integration - Hybrid Architecture",
  "main": "dist/index-hybrid.js",
  "type": "module",
  "bin": {
    "discord-mcp": "./dist/index-hybrid.js",
    "discord-mcp-legacy": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index-hybrid.ts",
    "dev:legacy": "tsx src/index.ts",
    "start": "node dist/index-hybrid.js",
    "start:legacy": "DISCORD_MCP_LEGACY=true node dist/index-hybrid.js",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sashathelambo/discord-mcp.git"
  },
  "keywords": [
    "mcp",
    "discord",
    "discord-bot",
    "model-context-protocol"
  ],
  "author": "SaseQ",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sashathelambo/discord-mcp/issues"
  },
  "homepage": "https://github.com/sashathelambo/discord-mcp#readme",
  "dependencies": {
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.18.0",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "discord.js": "^14.21.0",
    "dotenv": "^17.2.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.0.15",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
